<?xml version="1.0" encoding="utf-8"?>
<com.coska.beacon.ui.task.action.PhoneCallView style="@style/Task.Card"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		style="@style/Coska.Container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			style="@style/Task.Card.Title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Phone call" />

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<android.support.design.widget.TextInputEditText
				android:id="@+id/name"
				style="@style/Coska.Text.Input"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="Name" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<android.support.design.widget.TextInputEditText
				android:id="@+id/number"
				style="@style/Coska.Text.Input"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="Number" />
		</android.support.design.widget.TextInputLayout>
	</LinearLayout>
</com.coska.beacon.ui.task.action.PhoneCallView>